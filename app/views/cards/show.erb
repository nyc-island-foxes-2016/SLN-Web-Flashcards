
<h2>Round <%= @round.id %></h2>

<p>
  <% if @current_guess.correct_guess %>
  <h3><%= "Correct!" %></h3>
  <% else %>
  <h3>Not quite! Check the correct answer.</h3>
  <% end %>
</p>

<p>
  Question: <%= @card.question%>
</p>

<p>
  Answer: <%= @card.answer%>
</p>

<form method="get" action="/guesses/new">
  <input type="hidden" name="guess_id" value="<%= @current_guess.id %>">

  <input type="submit" value="Next">
</form>
